@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home";
}

@if(TempData.ContainsKey("Message"))
{
    <div>
        <h1>@TempData["Message"]</h1>
    </div>
}


<a asp-action="Create" class="btn btn-primary mt-3">Create New Employee</a>

<div class="mt-2">
    <form asp-action="Index" method="get" class="row offset-2">
        <div class="col-10">
            <input  class=" form-control" placeholder="Employee`s Name" name="searchValue" required/>
        </div>
        <div class="col-2">
            <input  type="submit" class="btn btn-info" value="Search"/>
        </div>
    </form>
</div>
@if(Model.Any())
{
    <table class="table table-striped table-hover  mt-3">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Age)</td>
@*                 <td>@Html.DisplayNameFor(d => d.Department)</td> *@
                <td>@Html.DisplayNameFor(d => d.Salary)</td>
                <td>@Html.DisplayNameFor(d => d.Address)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Phone)</td>
                <td>@Html.DisplayNameFor(d => d.isActive)</td>

                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>


            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(e => employee.Email)</td>
                    <td>@employee.Phone</td>
                    <td>
                        @if (employee.isActive)
                        {
                            <i class="fa-solid fa-circle " style="color:green"></i>
                        }
                        else
                        {

                            <i class="fa-solid fa-circle " style="color:red"></i>
                        }
                    </td>

                    <td> <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details</a></td>
                    <td><a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success"><i class="fas fa-edit"></i>Edit</a></td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h1>No Employees Found</h1>
    </div>
}
